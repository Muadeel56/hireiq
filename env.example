# =============================================================================
# HireIQ Environment Configuration
# Copy this file to .env and update the values for your environment
# =============================================================================

# Environment
ENVIRONMENT=development
NODE_ENV=development
DEBUG=1

# Database Configuration
DATABASE_URL=postgresql://hireiq_user:hireiq_password@db:5432/hireiq_db
POSTGRES_DB=hireiq_db
POSTGRES_USER=hireiq_user
POSTGRES_PASSWORD=hireiq_password

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Django Configuration
DJANGO_SETTINGS_MODULE=hireiq_backend.settings.development
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,backend,nginx

# Frontend Configuration
VITE_API_URL=http://localhost/api
REACT_APP_API_URL=http://localhost/api
REACT_APP_ENVIRONMENT=development

# Security (Production only)
# SSL_REDIRECT=True
# SECURE_BROWSER_XSS_FILTER=True
# SECURE_CONTENT_TYPE_NOSNIFF=True

# Email Configuration (Optional)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# AWS S3 Configuration (Production only)
# USE_S3=False
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Celery Configuration (Future)
# CELERY_BROKER_URL=redis://redis:6379/1
# CELERY_RESULT_BACKEND=redis://redis:6379/1

# Monitoring & Logging
LOG_LEVEL=INFO

# API Rate Limiting
# RATE_LIMIT_ENABLED=True
# RATE_LIMIT_PER_MINUTE=100 